<% for (product of productosVisited) { %>
  <article class="card-container">
    <a href="javascript:void(0)" class="card product">
      <div class="card-img" style="background-image: url('/assets/img/products/<%= product.image %>');">
      </div>
      <div class="card-body">
        <i class="material-icons shipping">local_shipping</i>
        <h4 class="card-title">$<%= finalPrice(product.price, product.discount) %>
          <small class="text-success"><%= product.discount %> % OFF</small>
        </h4>
        <p><%= product.name %></p>
      </div>
    </a>
  </article>
<% } %>

