<!doctype html>
<html lang="en">

<head>
  <%- include('partials/head', {title: 'Editar producto'}) %>
</head>

<body class="detail">
  <!-- navbar header -->
  <%- include('partials/header') %>
  <!-- /.navbar header -->

  <!-- detaik content -->

  <!-- product create -->
  <div class="container products-wrapper">
    <div class="row">
      <div class="col-12">
        <h2 class="products-title">Formulario de creación de productos</h2>
      </div>
    </div>
    <div class="col-12">
      <form action="/products/edit/<%= productToEdit.id %>?_method=PUT" method="POST">
        <div class="row product-detail p-3">
          <div class="col-12 col-md-6 form-group">
            <label for="name" class="form-label">Nombre del producto:</label>
            <input class="form-control" type="text" id="name" name="name" value="<%= productToEdit.name %>" placeholder="<%= productToEdit.name %>">
          </div>
          <div class="col-12 col-md-6 form-group">
            <label for="price" class="form-label">Precio del producto:</label>
            <input class="form-control" type="text" id="price" name="price" value="<%= productToEdit.price %>" placeholder="<%= productToEdit.price %>">
          </div>
          <div class="col-12 col-md-6 form-group">
            <label for="discount" class="form-label">Descuento:</label>
            <input class="form-control"  id="discount" name="discount" value="<%= productToEdit.discount %>" placeholder="<%= productToEdit.discount %>">
          </div>
          <div class="col-12 col-md-6 form-group">
            <label for="category" class="form-label">Categoría:</label>
            <select class="custom-select" name="category" id="category">
              <option value="">Elegí</option>
              <option value="in-sale">En oferta</option>
              <option value="visited">Últimos agregados</option>
            </select>
          </div>
          <div class="col-12">
            <label for="description" class="form-label">Descipción:</label>
            <textarea class="form-control" name="description" id="description"><%= productToEdit.description %></textarea>
          </div>
          <div class="col-12 mt-3">
            <button type="submit" class="btn btn-primary">Guardar producto</button>
          </div>
        </div>
      </form>
    </div>

  </div>
  <!-- /product create -->

  <!-- /.detaik content -->
  <%- include('partials/footer') %>

  <%- include('partials/scripts') %>
</body>

</html>
